<% provide(:title, '商品一覧') %>
<h1>新着商品</h1>

<%= link_to "Mens", "/products/mens", class: 'btn btn-default'  %>
<%= link_to "Ladies", "/products/ladies", class: 'btn btn-default'  %>

<!-- form_tagでmens/ladiesボタンを作ろうとした時の奮闘のあと
<%= form_tag("/products/ladies", method: :get) do |f| %>
  <input type="submit" value="Ladies"></input>
  <input type="hidden" name = "gender_id" value = 2 ></input>
<% end %>
 -->


<%= will_paginate %>

<!--  検索拡張機能  -->
<p>商品の検索</p>
<%= form_tag(products_path, method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<main>
<div class="content-area">

  <% @products.each do |product| %>
    <div class="content">

      <table>
        <tr>
          <% if product.category_id<2 %>
            <%= link_to image_tag("1.png", alt: "T-shirt", size: "225x225"), product %>
          <% elsif product.category_id<3 %>
            <%= link_to image_tag("2.png", alt: "T-shirt"), product %>
          <% elsif product.category_id <4 %>
            <%= link_to image_tag("3.png", alt: "T-shirt"), product %>
          <% elsif product.category_id <5 %>
            <%= link_to image_tag("4.png", alt: "T-shirt"), product %>
          <% elsif product.category_id <6 %>
            <%= link_to image_tag("5.png", alt: "T-shirt"), product %>
          <% elsif product.category_id <7 %>
            <%= link_to image_tag("6.png", alt: "T-shirt"), product %>
          <% elsif product.category_id <8 %>
            <%= link_to image_tag("7.png", alt: "T-shirt"), product %>
          <% elsif product.category_id < 9 %>
            <%= link_to image_tag("8.png", alt: "T-shirt"), product %>
          <% else product.category_id < 10 %>
            <%= link_to image_tag("9.png", alt: "T-shirt"), product %>
          <% end %>
          <th><%= link_to product.product_name, product %></th>
        </tr>
        <tr>
            <td>ジャンル <%= product.category.category_name %></td>
        <tr>
            <td>￥<%= product.price %></td>
        </tr>
      </table>
    </div>
  <% end %>
</div>

</main>
<%= will_paginate %>