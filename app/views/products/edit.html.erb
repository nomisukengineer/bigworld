<% provide(:title, '商品更新') %>
<h1>商品更新ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product, url: '/products/new') do |f| %>
      <%= render 'shared/error_messages_products' %>

      <%= f.label :product_name, "商品名" %>
      <%= f.text_field :product_name, class: 'form-control' %>

      <%= f.label :gender_id, "性別" %>
      <%= f.select :gender_id, [["男", "1"], ["女", "2"]], class: 'form-control' %>

      <%= f.label :category_id, "カテゴリー" %>
      <%= f.select :category_id, [["コート", "1"], ["ジャンパー", "2"],["パーカー","3"],["シャツ", "4"],["Tシャツ","5"],["半ズボン","6"],["長ズボン","7"],["スカート","8"],["ワンピース","9"]], class: 'form-control' %>

      <%= f.label :price, "価格" %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.submit "商品を登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>