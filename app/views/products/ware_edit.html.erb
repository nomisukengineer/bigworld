<% provide(:title, 'サイズと在庫を更新') %>

<h1>サイズと在庫を更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@ware, url: product_ware_edit_path(@product)) do |f| %>
      <%= render 'shared/error_messages_products', object: f.object %>


      <%= f.hidden_field :size_id, value: @size_id %>
      <%= f.hidden_field :product_id, value: @product.id %> 

      <%= f.label :在庫数 %>
      <%= f.number_field :amount, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>